.annotation
  padding: 0
  margin: 0 auto

  span
    margin: 10px 0 0 0

  .subject
    display: flex
    align-items: center
    justify-content: space-between
    padding: 5px 0
    width: 100%

    @media screen and (max-width: 870px)
      justify-content: space-around

    @media screen and (max-width: 870px)
      flex-wrap: wrap

    .loading-spinner
      width: 100%
      max-width: 930px
      display: inline-block
      position: absolute
      top: 131px
      z-index: 10
      color: $topbar-green

    .guide-btn, .favorite-btn
      font-size: 12px
      line-height: 12px
      color: #5c5c5c
      text-align: center
      margin: 5px 0
      background: transparent
      width: 80px

      &:before
        content: ''
        display: block
        text-align: center
        border-radius: 50%
        width: 56px
        height: 56px
        margin: 0 auto 5px

      &.disabled
        opacity: 0.5

      @media screen and (max-width: 870px)
        margin: 20px 0 0

      @media screen and (max-width: 400px)
        margin: 10px 0

    .guide-btn
      &:before
        background: $blackish url(./assets/guide/guide-icon.svg) no-repeat center center

      &:hover:before
        background-color: rgba(17, 17, 17, 0.7)

      @media screen and (max-width: 870px)
        order: 2

    .favorite-btn
      &:before
        background: $blackish url(./assets/fav-icon.svg) no-repeat center center

      &:hover:before
        background-color: rgba(17, 17, 17, 0.7)

      &.disabled:before
        background-image: url(./assets/fav-icon-disabled.svg)

      &.disabled[data-tooltip]
        position: relative

        &:hover:after
          content: attr(data-tooltip)
          position: absolute
          color: white
          background-color: $blackish
          padding: 5px
          box-sizing: border-box
          width: 75px
          margin-left: -60px
          margin-top: 15px

      @media screen and (max-width: 870px)
        order: 3

      @media screen and (max-width: 350px)
        margin: 0 0 10px

    .guide-open:before
      background-image: url(./assets/cancel-icon.svg)

    .favorited:before
      background-image: url(./assets/fav-icon-filled.svg)

    .preview-imgs
      width: 100%
      max-width: 930px
      height: 100%
      display: block
      opacity: 0.3
      transition: opacity .5s ease-in-out

      @media screen and (min-width: 1100px)
        min-height: 537px

      figure
        margin: 0
        max-width: 33.33%
        float: left
        transition: all 0.2s

        @media screen and (min-width: 601px)
          cursor: pointer

        @media screen and (max-width: 600px)
          max-width: 100%

        img
          padding: 5px
          border: .1px solid transparent //IE fix
          border-radius: 8px
          width: 100%
          max-width: 310px
          box-sizing: border-box
          vertical-align: top

          @media screen and (max-width: 600px)
            max-width: 100%

    .video-container
      margin: 5px auto
      text-align: center

      @media screen and (max-width: 870px)
        width: 98%
        order: 1
        align-self: center

      video
        border-radius: 8px
        vertical-align: top
        max-width: 930px
        
        &::-internal-media-controls-download-button 
          display: none

        &::-webkit-media-controls-enclosure 
          overflow: hidden

        &::-webkit-media-controls-panel 
          width: calc(100% + 30px); /* Adjust as needed */

        @media screen and (max-width: 640px)
          width: 100%

  .skylight-dialog
    position: fixed
    top: 40px
    width: 60%
    left: 20%
    background-color: $blackish
    border-radius: 8px
    z-index: 100
    padding: 10px
    box-sizing: border-box
    animation: fadeIn .25s forwards

    h2
      display: none

    img
      width: 100%
      border-radius: 8px

    .skylight-dialog--close
      display: none

    .close-zoom-btn
      cursor: pointer
      position: absolute
      top: 5px
      right: -35px
      font-size: 16px

  .skylight-dialog__overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 99
    background-color: rgba(0,0,0,0.7)
    animation: fadeIn .25s forwards

  .fade-out
    animation: fadeOut .25s forwards

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes fadeOut {
  from { opacity: 1; }
  to { opacity: 0; }
}
