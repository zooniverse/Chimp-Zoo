.about
  color: #eae9e9

  .about-hero
    background: url(./assets/about/about-chimps.jpg) no-repeat 75% center
    background-size: cover
    width: 100%
    height: 414px

    h2
      margin: 0
      font-size: 60px
      font-weight: 700
      line-height 60px
      text-align: left
      color: white
      padding: 143px 249px
      max-width: 300px
      width: 100%

      @media screen and (max-width: 768px)
        padding: 143px 10px

      img
        width: 100%

  .about-nav
    background-color: $near-black
    height: 59px

    a
      text-decoration: none
      line-height: 59px
      padding: 19px
      color: white

      &:first-of-type
        margin-left: 0

      &.active
        background-color: $green

      &.about-link
        background-color: $near-black

      &:visited(:not(.active))
        color: inherit


  .page-one, .page-two, .page-three
    .about-section
      width: 100%
      background-color: $dark-gray
      height: 500px

      @media screen and (max-width: 768px)
        height: 100%

      .content
        display: flex
        height: 100%
        align-items: center

        @media screen and (max-width: 768px)
          flex-direction: column

        div
          padding: 0 110px 0 20px
          max-width: 738px

          @media screen and (max-width: 768px)
            padding: 20px

          h2
            color: $green
            font-weight: 400

          h3
            color: #bbbaba
            font-size: 14px
            font-weight: 400

          p
            color: #eae9e9
            margin: 0
          a
            display: none

        img
          width: 100%
          max-width: 225px
          height: 100%
          max-height: 225px
          box-sizing: border-box
          margin: 20px

          @media screen and (max-width: 768px)
            margin: 20px 20px 5px
            width: 225px
            height 225px

      &:nth-child(odd)
        background-color: $blackish

  .page-one
    .about-section
      .content
        div
          order: 1

          @media screen and (max-width: 768px)
            order: 2

        img
          order: 2
          border-radius: 50%

          @media screen and (max-width: 768px)
            order: 1
            margin: 20px 20px 5px

      &:nth-child(odd)
        .content
          div
            order: 2
            padding: 0 20px 0 110px

            @media screen and (max-width: 768px)
              padding: 20px

          img
            order: 1
            border-radius: 50%


      &:last-of-type
        background: $green url(./assets/about/about-background.jpg) no-repeat center center
        background-size: cover
        height: 333px

        .content
          height: 333px
          text-align: center
          flex-direction: column
          justify-content: center

          div
            padding: 0 20px

            h2
              margin: 75px 0
              color: #eae9e9

              @media screen and (max-width: 768px)
                margin: 0 0 20px

            p
              display: none

            a
              display: inline-block
              padding: 22px 74px
              text-decoration: none
              color: #eae9e9
              background-color: #1b865c
              border-radius: 6px

              &:hover
                background-color: rgba(27, 134, 92, 0.7)

          img
            order: 3
            width: 66px
            height: 112px
            border: none
            position: relative
            bottom: -78px
            margin: 0 175px 0 0
            padding: 0
            transition: all 0.5s ease
            align-self: flex-end

            @media screen and (max-width: 768px)
              align-self: center
              bottom: -136px
              margin: 0

            @media screen and (max-width: 571px)
              bottom: -120px

            @media screen and (max-width: 350px)
              bottom: -105px

            &:hover
              bottom: -58px

              @media screen and (max-width: 768px)
                bottom: -116px

              @media screen and (max-width: 571px)
                bottom: -100px

              @media screen and (max-width: 350px)
                bottom: -85px


  .page-two, .page-three
    @media screen and (max-width: 768px)
      h2
        text-align: center

  .page-two
    h2
      margin: 0 0 5px

    h3
      margin-top: 0

      @media screen and (max-width: 768px)
        text-align: center

    img
      border-radius: 50%


  .page-three
    .about-section
      .about-org-lists
        display: none

      &:last-of-type
        height: 100%
        padding: 125px 0

        @media screen and (max-width: 768px)
          padding: 0

        .about-org-lists
          display: flex
          flex-direction: column

          div
            padding: 0 110px 0 85px

            @media screen and (max-width: 768px)
              padding: 0 20px

            h3
              font-weight: 400

            ul
              padding: 0

              li
                list-style: none

                a
                  display: inline
                  color: #eae9e9

                  &:visited, &:focus, &:active
                    color: #eae9e9

  .authors-page
    background-color: $dark-gray
    display: flex
    flex-direction: column
    width: 100%

    h2
      color: $green
      font-weight: 400

    .content
      padding: 20px



